<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#228A07"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="613dp"
        android:layout_height="72dp"
        android:fontFamily="@font/inter_medium"
        android:text="CHOIX DE LA COULEUR"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="italic"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171" />

    <Button
        android:id="@+id/jouerButton"
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:layout_marginBottom="100dp"
        android:backgroundTint="@color/unavailable"
        android:fontFamily="@font/inter"
        android:text="JOUER"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coeurButton" />

    <Button
        android:id="@+id/trefleButton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="99dp"
        android:layout_marginBottom="652dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_medium"
        android:text="TREFLE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <Button
        android:id="@+id/coeurButton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="320dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_medium"
        android:text="COEUR"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.78"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trefleButton" />

    <Button
        android:id="@+id/carreauButton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="320dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_medium"
        android:text="CARREAU"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/piqueButton" />

    <Button
        android:id="@+id/piqueButton"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="99dp"
        android:layout_marginBottom="652dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/inter_medium"
        android:text="PIQUE"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

</androidx.constraintlayout.widget.ConstraintLayout>