<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenBackground">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trefleTeam"
        android:layout_width="93dp"
        android:layout_height="169dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="183dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/piqueTeam"
        android:layout_width="93dp"
        android:layout_height="169dp"
        app:layout_constraintEnd_toStartOf="@+id/trefleTeam"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="183dp" />

    <Button
        android:id="@+id/jouerButton"
        android:layout_width="@dimen/main_button_width"
        android:layout_height="@dimen/main_button_height"
        android:backgroundTint="@color/unavailable"
        android:fontFamily="@font/inter"
        android:text="JOUER"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Title"
        app:layout_constraintVertical_bias="0.897" />

    <TextView
        android:id="@+id/textPique"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:fontFamily="@font/inter_medium"
        android:text="Pique"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201" />

    <TextView
        android:id="@+id/textTrefle"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:fontFamily="@font/inter_medium"
        android:text="Trefle"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.201" />

    <TextView
        android:id="@+id/textCoeur"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:fontFamily="@font/inter_medium"
        android:text="Coeur"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/coeurTeam"
        android:layout_width="93dp"
        android:layout_height="169dp"
        app:layout_constraintEnd_toStartOf="@+id/carreauTeam"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="414dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/carreauTeam"
        android:layout_width="93dp"
        android:layout_height="169dp"
        android:layout_marginEnd="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="414dp" />

    <TextView
        android:id="@+id/textCarreau"
        android:layout_width="93dp"
        android:layout_height="32dp"
        android:fontFamily="@font/inter_medium"
        android:text="Carreau"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.773"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="267dp"
        android:layout_height="65dp"
        android:fontFamily="@font/inter_medium"
        android:text="EQUIPES"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="48sp"
        android:textStyle="italic"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.082" />

</androidx.constraintlayout.widget.ConstraintLayout>